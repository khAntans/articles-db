{% extends 'partials/base.twig' %}
{% block body %}
    <div class="justify-self-center text-center">
        <h5>{{ session['actionStatus'] }}</h5>
    </div>
    <div class="w-full">
        <div class=" border-2 border-cyan-500 rounded-2xl overflow-clip bg-opacity-10 bg-neutral-950
            drop-shadow-md ">
            <div class="bg-indigo-300 bg-opacity-70 mb-1 border-b-2 border-cyan-500 margin-x-center">
                <img src="{{ article.getPicture }}" alt="{{ article.getTitle }}" class="object-cover margin-x-center">
            </div>
            <h3 class="font-black capitalize px-1 text-3xl">
                <a>{{ article.getTitle }}</a>
            </h3>
            <p class="px-1 break-words whitespace-normal article-show-width">{{ article.getDescription }}</p>
            <p class="px-1"><small>Published: {{ article.getCreatedAt }}</small></p>
            {% if article.getUpdatedAt == true %}
                <p class="px-1"><small>Last update: {{ article.getUpdatedAt }}</small></p>
            {% endif %}
            <br>
        </div>

    </div>
    <div class="grid grid-cols-2 pt-2">
        <div  class="justify-self-center">
            <a href="/articles/{{ article.id }}/edit">
                <button class="text-white font-bold h-max text-2xl bg-indigo-500 hover:text-gray-300 hover:bg-cyan-600
                                                             rounded-2xl drop-shadow-lg p-2 col-start-6
                                                             col-end-7 justify-self-end px-10 py-1.5
                col-start-1 col-end-2 ">Edit
                </button>
            </a>
        </div>
        <form method="POST" action="/articles/{{ article.id }}/delete" class="justify-self-center">
            <input type="hidden" value="{{ article.id }}" name="id">
            <button class="text-white font-bold h-max text-2xl bg-red-600 hover:text-gray-300 hover:bg-red-900
          rounded-2xl drop-shadow-lg p-2 col-start-6
           col-end-7 justify-self-end px-10 py-1.5
col-start-2 col-end-3" type="submit">Delete
            </button>
        </form>
    </div>
{% endblock %}